<html>
    <head>
        <title>Aprende con Fitito</title>
        <link rel="stylesheet" type="text/css" href="<%= url('/tematica.css?v=100') %>" />
    </head>
    <body>
        <div class="box">    
            <div class="container">
                <h1 style="color: white;">Bienvenido a Aprende con Fitito</h1>
                    <form action="/" method = "post">
                        <div class="input-field">
                            <input type="text" name="email" placeholder="Dirección de correo electrónico" required></input>
                            <i class='bx bx-user' ></i>
                        </div>
                        <div class="input-field">
                            <input type="password" name="password" placeholder="Contraseña" required></input>
                            <i class='bx bx-lock-alt'></i>
                        </div>
                            <button type="submit" value="LogIn">Ingresar</button>
                    </form>
                    <form action="/register" method = "get">
                       <h2 style="color: black; font-size: 12;">No tienes una cuenta?</h2>
                       <button type="submit" value="register">Registrate</button>
                    </form>
            </div>
        </div>
    </body>
</html>
